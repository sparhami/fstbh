<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<!DOCTYPE prefwindow SYSTEM "chrome://fstbh/locale/fstbh.dtd">

<prefwindow title="&com.sppad.fstbh.preferences.title;" id="fstbh-preferences-window"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<prefpane id="com_sppad_fstbh_GeneralPrefPane" label="&preference.generalPrefPane.label;">
		<preferences>
			<preference id="extensions.fstbh.transitionDuration" name="extensions.fstbh.transitionDuration"
				type="int" />
			<preference id="extensions.fstbh.showWhenTitleChanged" name="extensions.fstbh.showWhenTitleChanged"
				type="string" />
		</preferences>
		<groupbox>
			<vbox>
				<caption label="&preference.timing.label;" />
				<hbox align="center">
					<label value="&preference.transitionDuration.label;" />
					<textbox type="number"
						min="0" max="1000" width="64" preference="extensions.fstbh.transitionDuration" />
				</hbox>
			</vbox>
			<vbox>
				<caption label="&preference.showWhenTitleChanged.label;" />

				<radiogroup preference="extensions.fstbh.showWhenTitleChanged"
					orient="vertical">
					<radio value="never" label="&preference.showWhenTitleChanged.never.label;" />
					<radio value="pinned" label="&preference.showWhenTitleChanged.pinned.label;" />
					<radio value="any" label="&preference.showWhenTitleChanged.any.label;" />
				</radiogroup>
			</vbox>
		</groupbox>
	</prefpane>
</prefwindow>